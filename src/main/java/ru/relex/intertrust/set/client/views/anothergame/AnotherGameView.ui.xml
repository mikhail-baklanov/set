<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="resources" type="ru.relex.intertrust.set.client.views.anothergame.AnotherGameResources"></ui:with>


    <g:HTMLPanel>
        <div class="{resources.style.loginBlock_gameStarted}">
            <div ui:field="alreadyGame" class="{resources.style.loginBlock_hello}"></div>
            <div class="{resources.style.gameStarted_item}">
                <span ui:field="gameTime"></span><span ui:field="anotherGameTime"></span>
            </div>
            <div class="{resources.style.gameStarted_item}">
                <span ui:field="cardsLeft"></span><span ui:field="anotherGameCards"></span>
            </div>
            <div class="{resources.style.gameStarted_players_items}">
                <g:HTMLPanel ui:field="anotherGamePlayers">
                    <div class="{resources.style.gameStarted_players_item}">
                        <div ui:field="playerName"></div><div ui:field="gamePoints"></div>
                    </div>
                </g:HTMLPanel>
            </div>
            <g:Button ui:field="observe" styleName="{resources.style.change_mode}">Наблюдать</g:Button>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
