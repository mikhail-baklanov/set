@external container-block not-active main;

.container-block {
    position: absolute;
    display: flex;
    flex-direction: column;
    top: 40%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 500px;
    min-height: 300px;
    background-color: rgba(255,255,255,0.5);
    box-shadow: 0 3px 7px rgba(105,127,148,0.5);
}

.main {
    opacity: 1;
    transition: .4s;
}

.main.not-active {
    opacity: 0;
}