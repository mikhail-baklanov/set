<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="resources" type="ru.relex.intertrust.set.client.views.login.LoginResources"></ui:with>

    <g:HTMLPanel ui:field="login" styleName="{resources.style.loginBlock_newPlayer}">
        <div ui:field="welcome" class="{resources.style.loginBlock_hello}"></div>
        <g:FormPanel ui:field="submitLoginForm">
            <g:HTMLPanel styleName="{resources.style.nicknameWrapper}">
                <g:TextBox ui:field="nicknameLogin" styleName="{resources.style.loginBlock_nickname}"/>
                <span ui:field="errorLogin" class="{resources.style.nicknameWrapper_error}"></span>
                <span class="{resources.style.bar}"></span>
                <label ui:field="name"></label>
                <g:Button ui:field="submitLogin" styleName="{resources.style.loginBlock_continue}"></g:Button>
            </g:HTMLPanel>
        </g:FormPanel>
        <div ui:field="timeBlockLogin" class="{resources.style.loginBlock_gameStart}"><span ui:field="timeToPlay"></span><span ui:field="loginTimer"></span></div>
    </g:HTMLPanel>
</ui:UiBinder>
